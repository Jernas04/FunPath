    </ProgressBar>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mochi_pop_one_regular"
        android:text="Fun Superstar"
        android:textColor="#3F414E"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar4"
        app:layout_constraintStart_toStartOf="@+id/progressBar4">

    </TextView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/vector_star_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_percentage_superstar"
