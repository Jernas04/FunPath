<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Shadow layer (adjusted for pressed effect) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#D1A88F"/> <!-- Darker shadow color when pressed -->
                    <corners android:radius="10dp"/>
                    <size android:width="100dp" android:height="100dp"/>
                    <padding android:left="0dp" android:right="4dp" android:top="0dp" android:bottom="4dp"/>
                </shape>
            </item>

            <!-- Background layer (darker color when pressed) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#D0D0D0"/> <!-- Slightly darker color when pressed -->
                    <corners android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E8CFA9"/> <!-- Light shadow color -->
                    <corners android:radius="10dp"/>
                    <size android:width="100dp" android:height="100dp"/>
                    <padding android:left="0dp" android:right="4dp" android:top="0dp" android:bottom="4dp"/>
                </shape>
            </item>

            <!-- Background layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/> <!-- Normal background color -->
                    <corners android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
